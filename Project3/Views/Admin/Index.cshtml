<h1>User List</h1>

@section Styles {
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .sidebar {
            height: 100vh;
            background: #343a40;
            color: white;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px 15px;
            }

                .sidebar a:hover {
                    background: #495057;
                }

        .content {
            padding: 20px;
        }

    </style>
}




<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">UserNAme</th>
            <th scope="col">Email</th>
            <th scope="col">Age</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in users)
        {
            <tr>
                <td>@user.userName</td>
                <td>@user.Age</td>
                <td>@user.email</td>

            </tr>
        }
    </tbody>
</table>

